<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.18/angular.min.js"></script>
	<script type="text/javascript" src="/js/app.js"></script>
  </head>
  <body>
  	<div class="container">
  		<nav class="navbar navbar-default" role="navigation">
  			<!-- Brand and toggle get grouped for better mobile display -->
  			<div class="navbar-header">
  				<a class="navbar-brand" href="/"><%= title %></a>
  			</div>
  			
  		</nav>
  	

  	<div class="row" ng-app="myApp">
	  	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" ng-controller="ForcastController">
				<div class="form-inline">
					<input type="text" class="form-control" ng-model="cityQuery" placeholder="Search By Place">
					<button type="button" class='btn btn-info' ng-click="search()">
					Search</button>
				</div>
				<table class="table table-bordered table-striped">
					<caption><h3>Last Five Days Temp. Of {{ fdy.city.name }}</h3></caption>
					<thead>
						<tr>
							<th>Date</th>
							<th>Temp(Avg.)</th>
							<th>Temp(Min)</th>
							<th>Temp(Max)</th>
							<th>Humidity</th>
							<th>Sea Level</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="item in fdy.list">
							<td>{{ item.dt|timestampToDate}}</td>
							<td>{{ item.main.temp }}</td>
							<td>{{ item.main.temp_min }}</td>
							<td>{{ item.main.temp_max }}</td>
							<td>{{ item.main.humidity }}</td>
							<td>{{ item.main.sea_level }}</td>
						</tr>
					</tbody>
				</table>
			</div>

	  	</div>
  	</div>


  </div>
    


  </body>

</html>
